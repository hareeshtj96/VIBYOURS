    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
      document
        .getElementById("submitBtn")
        .addEventListener("click", function (event) {
          event.preventDefault();

          const categoryName = document
            .getElementById("categoryName")
            .value.trim();

          const description = document
            .getElementById("description")
            .value.trim();

          if (!categoryName) {
            Swal.fire({
              icon: "error",
              title: "Oops...",
              text: "Category Name is required!",
            });
            return;
          }

          const formData = {
            name: categoryName,
            description: description, // You can add description if needed
          };

          checkExistingCategory(formData);
        });

      function checkExistingCategory(formData) {
        fetch(`/admin/editCategory?id=<%= category._id %>&name=${formData.name}`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(formData),
        })
          .then((response) => {
            
            if (!response.ok) {
              
              throw new Error(`HTTP error! Status: ${response.status}`);
            }

            return response.json();
          })
          .then((data) => {
            if (data && data.status === "error") {
              if (data.message === "Category Name already exists") {
                // Display a specific SweetAlert for duplicate category name
                Swal.fire({
                  icon: "error",
                  title: "Oops...",
                  text: "Category Name already exists. Please choose a different name.",
                  confirmButtonText: "OK",
                });
              } else {
                // Handle other error cases
                Swal.fire({
                  icon: "error",
                  title: "Oops...",
                  text: data.message,
                  confirmButtonText: "OK",
                });
              }
            } else {
              // Handle success case
              Swal.fire({
                icon: "success",
                title: "Success!",
                text: "Category updated successfully",
                confirmButtonText: "OK",
              }).then(() => {
                document.getElementById("editCategoryForm").submit();
                window.location.href = "/admin/category";
              });
            }
          })
          .catch((error) => {
            console.error("An unexpected error occurred:", error);
            alert("An unexpected error occurred: " + error.message);
          });
      }
    </script>
