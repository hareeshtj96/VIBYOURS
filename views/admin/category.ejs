    <script>
      function confirmDelete(categoryId) {
        Swal.fire({
          title: "Are you sure?",
          text: "You won't be able to revert this!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#d33",
          cancelButtonColor: "#3085d6",
          confirmButtonText: "Yes, delete it!",
        }).then((result) => {
          if (result.isConfirmed) {
            // Redirect to the delete URL or perform the delete action
            window.location.href = "/admin/deleteCategory/" + categoryId;
          }
        });
      }

      //category valdiation
      async function checkAndSubmit(event) {
    event.preventDefault();

    const nameInput = document.getElementById("categoryName");
    const name = nameInput.value.trim().toLowerCase();
    const descriptionInput = document.getElementById("description");
    const description = descriptionInput.value.trim();

    if (!name) {
        Swal.fire({
            icon: "error",
            title: "Oops...",
            text: "Please enter a category name",
        });
        return;
    }

    try {
        const response = await makeAsyncRequest(name, description);

        if (response.status === "success") {
            Swal.fire({
                icon: "success",
                title: "Successful",
                text: response.message,


            });
            

            // Optionally, you can redirect or perform other actions after success
            const categoryForm = document.getElementById("categoryForm");
            categoryForm.submit();
            window.location.reload();
        } else if (response.status === "error" && response.message === "Category Name already exists") {
            // Display a user-friendly error message for the specific case of an existing category name
            Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Failed to create category. The category name already exists.",
            });
        } else if (response.status === "error") {
            // Handle other error cases if needed
            Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Failed to create category. Please try again later.",
            });
        }
    } catch (error) {
        console.error("Error during async request:", error);
        Swal.fire({
            icon: "error",
            title: "Oops...",
            text: "An unexpected error occurred. Please try again later.",
        });
    }
}

async function makeAsyncRequest(name, description) {
    try {
        const response = await fetch("/admin/category", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify({
                name: name,
                description: description,
                is_blocked: 0,
            }),
        });

        if (response.ok) {
            return { status: "success", message: "Category created successfully" };
        } else {
            const errorResponse = await response.json();
            return { status: "error", message: errorResponse.message || "Failed to create category" };
        }
    } catch (error) {
        console.error("Error during async request:", error);
        throw error;
    }
}

