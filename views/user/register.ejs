    <script>
        function validateName() {

            var nameInput = document.getElementById('name');
            var trimmedValue = nameInput.value.trim();


            var namePattern = /^[A-Za-z ]+$/;
            var nameError = document.getElementById('nameError');

            if (!namePattern.test(trimmedValue)) {
                nameError.innerHTML = 'Invalid name format. Please use alphabets and space only.';

            } else {
                nameError.innerHTML = '';

            }
        }

        function validateEmail() {
            var emailInput = document.getElementById('email').value.trim()
            var emailPattern = /^[a-zA-Z0-9._%+-]+@[a-zA-Z]+\.[a-zA-Z]{2,}$/;
            var emailError = document.getElementById('emailError');

            if (!emailPattern.test(emailInput)) {
                emailError.innerHTML = 'Invalid email format. Please enter a valid email address.';

            } else if (emailInput == "") {
                emailError.innerHTML = 'it is required';
            } else {
                emailError.innerHTML = '';

            }
        }

        function validatePassword() {
            var passwordInput = document.getElementById('password').value.trim()
            var passwordPattern = /^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{6,}$/;
            var passwordError = document.getElementById('passwordError');

            if (!passwordPattern.test(passwordInput)) {
                passwordError.innerHTML = 'Invalid password format. Password must be at least 6 characters, including alphabets and numerics, with no space.';

            } else {
                passwordError.innerHTML = '';

            }
        }


        function validateMobile() {
            const mobile = document.getElementById("mobile").value.trim();
            const mobileError = document.getElementById("mobileError");

            if (mobile === "") {
                mobileError.innerHTML = "Mobile number is required"
