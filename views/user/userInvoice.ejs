<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <style>
        /* CSS styles for the invoice layout */
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .invoice-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .invoice-details {
            margin-bottom: 20px;
        }

        .invoice-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .invoice-table th,
        .invoice-table td {
            padding: 8px;
            border: 1px solid #ccc;
        }

        .invoice-total {
            text-align: right;
            margin-top: 20px;
        }

        .logo-width-1 img {
            width: 125px;
            height: auto;
        }

        .invoice-details {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .left-details {
            text-align: left;
        }

        .right-details {
            text-align: right;
            margin-left: 150px;
        }

    </style>
</head>

<body>

    <div style="text-align: center;">
        <button class="btn btn-success" style="background-color: #088178;" id="downloadInvoice">Download</button>
    </div>
    
    <div class="container" id="invoiceDownload">
    
        <div class="logo logo-width-1">
            <a><img src="assets/imgs/theme/logo.svg" alt="logo"></a>
        </div>
        <div class="company-info">
            <address>
                VIBYOURS<br>
                K P Junction, Banglore<br>
                Karnataka, 530068<br>
                Phone: +01 2222 365 /(+91) 9567484143<br>
                Email: vibyours@gmail.com
            </address>
            <hr>
        </div>
        <div class="invoice-details">
            <div class="left-details">
                <p><strong>Order ID:</strong>
                    <%= orderData.orderId %>
                </p>
                <p><strong>Order Date:</strong>
                    <%= orderData.orderDate.toDateString() %>
                </p>
                <p><strong>Invoice Date:</strong>
                    <%= orderData.orderDate.toDateString() %>
                </p>
            </div>
            <div class="right-details">
                <p><strong>Delivery Address:</strong></p>
                <p>
                    <%= orderData.deliveryAddress.name %>
                </p>
                <p>
                    <%= orderData.deliveryAddress.housename %>
                </p>
                <p>
                    <%= orderData.deliveryAddress.city %>,
                    <%= orderData.deliveryAddress.locality %><br>
                    <%= orderData.deliveryAddress.landmark %>,
                    <%= orderData.deliveryAddress.state %>,<br>
                    <%= orderData.deliveryAddress.pincode %>,<br>
                    <%= orderData.deliveryAddress.mobile %><br>
                    
                </p>
            </div>
            <hr>
            <hr>

        </div>
        <table class="invoice-table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% orderData.items.forEach(item => { %>
                <tr>
                    <td><%= item.productId.producttitle %></td>
                    <td><%= item.quantity %></td>
                    <td>&#8377;<%= item.price %></td>
                    <td>&#8377;<%= item.price * item.quantity  %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <div class="invoice-total">
            <p><strong>Sub Total:</strong>&#8377;<%= orderData.billTotal  %></p>
            <p><strong>Discount:</strong> -&#8377;<%= orderData.discountPrice  %></p>
            <p><strong>Delivery Charge:</strong>&#8377;50</p>
            <p><strong>Total Amount:</strong>&#8377;<%= orderData.billTotal - orderData.discountPrice + 50 %></p>
            <hr>
        </div>
        <div style="text-align: center;">
            <p><strong>Thank you for shopping with us!</strong></p>
        </div>
    </div>



    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>

    <script>
        const pdfButton = document.getElementById('downloadInvoice')
        pdfButton.addEventListener("click", () => {
            const orderCofirmation = document.getElementById("invoiceDownload")
            html2pdf().from(orderCofirmation).save();
        })
    </script>
</body>

</html>